<div class="container mt-3">

  <div class="d-flex justify-content-between">
    <h1><%= @cocktail.name %></h1>
    <%= link_to "back to cocktail list", cocktails_path, class: "btn btn-success" %>
  </div>

  <div>
    <h5>Cocktail image</h5>
  </div>

  <div>
    <div class="border-top pt-3">
      <h5>Dose</h5>
      <div class="card-deck">
      <% @cocktail.doses.each do |dose| %>
        <div class="card w-25 mt-3">
          <div class="card-body">
            <p class="card-text">Ingredient: <%= dose.ingredient.name %></p>
            <p class="card-text">Description: <%= dose.description %></p>
            <%= link_to dose_path(dose),
            method: :delete, data: { confirm: "Are you sure?"} do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
    <br>
    <%= render 'doses/form', dose: @dose, cocktail: @cocktail %>
  </div>

</div>
