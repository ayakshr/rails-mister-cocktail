<%= simple_form_for(cocktail) do |f| %>
  <% if cocktail.errors.any? %>
    <div class="errors-container">
      <ul>
        <% cocktail.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="">
    <%= f.submit class: "btn btn-success" %>
  </div>

<% end %>
