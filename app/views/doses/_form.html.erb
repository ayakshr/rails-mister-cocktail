<%= simple_form_for [cocktail, dose] do |f| %>
  <% if dose.errors.any? %>
    <div class="errors-container">
      <ul>
        <% dose.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="w-25">
    <%= f.association :ingredient %>
  </div>
  <div class="w-25">
    <%= f.input :description %>
  </div>
  <div class="">
    <%= f.submit class: "btn btn-success" %>
  </div>

<% end %>
